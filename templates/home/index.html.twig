{% block stylesheets %}
{{ parent() }}
<style>
  :root {
    --primary-color: #4f46e5;
    --secondary-color: #ef4444;
    --primary-light: rgba(79, 70, 229, 0.1);
    --secondary-light: #dc2626;
  }
  
  /* Styles généraux pour la page d'accueil */
  body {
    font-family: 'Inter', sans-serif;
    color: #333;
    overflow-x: hidden;
  }
  
  /* Header et navigation principale */
  .header {
    padding: 12px 0;
    transition: all 0.3s;
    background: #ffffff;
    box-shadow: 0 1px 6px rgba(0, 0, 0, 0.02);
  }
  
  .header .logo {
    text-decoration: none;
    display: flex;
    align-items: center;
  }
  
  .header .sitename {
    font-size: 1.2rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    color: #333;
    margin: 0;
    text-transform: uppercase;
  }
  
  .header .sitename span {
    color: var(--secondary-color);
    font-weight: 600;
  }
  
  .header .navmenu {
    margin-left: auto;
  }
  
  .header .navmenu ul {
    margin: 0;
    padding: 0;
    list-style: none;
    display: flex;
    align-items: center;
  }
  
  .header .navmenu li {
    position: relative;
    padding: 0;
    margin: 0 3px;
  }
  
  .header .navmenu a {
    text-decoration: none;
    color: #666;
    font-weight: 400;
    font-size: 0.8rem;
    padding: 8px 12px;
    transition: all 0.2s ease;
    display: block;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .header .navmenu a:hover,
  .header .navmenu .active {
    color: var(--primary-color);
  }
  
  /* Boutons d'authentification */
  .user-welcome {
    color: #666;
    font-weight: 400;
    font-size: 0.75rem;
    letter-spacing: 0.02em;
    display: flex;
    align-items: center;
  }
  
  .user-welcome i {
    font-size: 1rem;
    margin-right: 4px;
  }
  
  .btn-logout {
    display: inline-flex;
    align-items: center;
    padding: 5px 10px;
    background-color: var(--secondary-color);
    color: white;
    border-radius: 3px;
    font-weight: 400;
    font-size: 0.75rem;
    transition: all 0.2s ease;
    text-decoration: none;
  }
  
  .btn-logout:hover {
    background-color: var(--secondary-light);
    color: white;
    transform: translateY(-1px);
  }
  
  .btn-login {
    display: inline-flex;
    align-items: center;
    padding: 5px 10px;
    background-color: transparent;
    color: #666;
    border: 1px solid #ddd;
    border-radius: 3px;
    font-weight: 400;
    font-size: 0.75rem;
    transition: all 0.2s ease;
    text-decoration: none;
  }
  
  .btn-login:hover {
    background-color: #f5f5f5;
    color: #333;
    border-color: #ccc;
  }
  
  .btn-primary-custom {
    background-color: var(--primary-color);
    border: none;
    color: white;
    padding: 5px 10px;
    border-radius: 3px;
    font-weight: 400;
    font-size: 0.75rem;
    transition: all 0.2s ease;
    text-decoration: none;
    box-shadow: 0 1px 3px rgba(79, 70, 229, 0.2);
  }
  
  .btn-primary-custom:hover {
    background-color: #4338ca;
    transform: translateY(-1px);
    box-shadow: 0 2px 5px rgba(79, 70, 229, 0.3);
  }
  
  /* Section Hero */
  .hero-section {
    background: linear-gradient(135deg, rgba(79, 70, 229, 0.05) 0%, rgba(79, 70, 229, 0.1) 100%);
    padding: 100px 0 60px 0;
    position: relative;
    overflow: hidden;
  }
  
  .hero-section::before {
    content: '';
    position: absolute;
    top: -40px;
    right: -40px;
    width: 250px;
    height: 250px;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(79, 70, 229, 0.2) 0%, rgba(79, 70, 229, 0.05) 100%);
    z-index: 0;
  }
  
  .hero-section::after {
    content: '';
    position: absolute;
    bottom: -80px;
    left: -80px;
    width: 350px;
    height: 350px;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(239, 68, 68, 0.1) 0%, rgba(239, 68, 68, 0.03) 100%);
    z-index: 0;
  }
  
  .hero-content {
    position: relative;
    z-index: 1;
  }
  
  .hero-title {
    font-size: 3rem;
    font-weight: 600;
    margin-bottom: 1.2rem;
    color: #333;
  }
  
  .hero-title span {
    color: var(--primary-color);
  }
  
  .hero-subtitle {
    font-size: 1.1rem;
    margin-bottom: 1.8rem;
    color: #666;
    max-width: 550px;
  }
  
  .hero-buttons .btn {
    margin-right: 1rem;
    padding: 7px 14px;
    font-weight: 400;
    border-radius: 3px;
    transition: all 0.2s ease;
    font-size: 0.8rem;
  }
  
  .btn-outline-custom {
    background-color: transparent;
    border: 1px solid var(--primary-color);
    color: var(--primary-color);
    padding: 7px 14px;
    border-radius: 3px;
    font-weight: 400;
    font-size: 0.8rem;
    transition: all 0.2s ease;
    text-decoration: none;
  }
  
  .btn-outline-custom:hover {
    background-color: var(--primary-light);
  }
  
  .hero-image {
    position: relative;
    z-index: 1;
  }
  
  .hero-image img {
    max-width: 100%;
    border-radius: 10px;
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.08);
    transform: perspective(1000px) rotateY(-5deg);
    transition: all 0.5s ease;
  }
  
  .hero-image img:hover {
    transform: perspective(1000px) rotateY(0deg);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
  }
  
  .floating-card {
    position: absolute;
    background: white;
    border-radius: 8px;
    padding: 12px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    display: flex;
    align-items: center;
    z-index: 2;
    animation: float 3s ease-in-out infinite;
  }
  
  .floating-card.card-1 {
    top: 18%;
    left: -35px;
    animation-delay: 0s;
  }
  
  .floating-card.card-2 {
    bottom: 12%;
    right: -25px;
    animation-delay: 1.5s;
  }
  
  .floating-card .icon {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    background-color: var(--primary-light);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 9px;
    color: var(--primary-color);
  }
  
  .floating-card .content h4 {
    font-size: 12px;
    margin: 0;
    color: #333;
  }
  
  .floating-card .content p {
    font-size: 10px;
    margin: 0;
    color: #666;
  }
  
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-8px); }
    100% { transform: translateY(0px); }
  }
  
  /* Section Statistiques */
  .stats-container {
    background-color: white;
    border-radius: 10px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
    padding: 18px;
    margin-top: -45px;
    position: relative;
    z-index: 10;
  }
  
  .stat-item {
    text-align: center;
    padding: 12px 9px;
    border-right: 1px solid #eee;
  }
  
  .stat-item:last-child {
    border-right: none;
  }
  
  .stat-number {
    font-size: 1.8rem;
    font-weight: 600;
    color: var(--primary-color);
    margin-bottom: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .stat-number i {
    font-size: 1.3rem;
    margin-right: 7px;
  }
  
  .stat-text {
    font-size: 0.8rem;
    color: #666;
  }
  
  /* Section Services */
  .services-section {
    padding: 70px 0;
    background-color: #f9fafb;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 45px;
  }
  
  .section-title {
    font-size: 2.2rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 12px;
  }
  
  .section-subtitle {
    font-size: 1rem;
    color: #666;
    max-width: 650px;
    margin: 0 auto;
  }
  
  .service-card {
    background-color: white;
    border-radius: 10px;
    padding: 25px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    height: 100%;
  }
  
  .service-card:hover {
    transform: translateY(-9px);
    box-shadow: 0 12px 25px rgba(0, 0, 0, 0.08);
  }
  
  .service-icon {
    width: 60px;
    height: 60px;
    border-radius: 10px;
    background-color: var(--primary-light);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 18px;
    color: var(--primary-color);
    font-size: 1.6rem;
  }
  
  .service-title {
    font-size: 1.2rem;
    font-weight: 500;
    margin-bottom: 12px;
    color: #333;
  }
  
  .service-description {
    color: #666;
    margin-bottom: 18px;
  }
</style>
{% endblock %}

