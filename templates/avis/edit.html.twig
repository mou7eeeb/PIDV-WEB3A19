{% extends 'base.html.twig' %}

{% block title %}Modifier l'Avis{% endblock %}

{% block body %}
  <div class="container my-5">
    <div class="card shadow-lg border-0 p-4" style="max-width: 700px; margin: auto; background-color: #f8f9fa;">
      <h2 class="text-center fw-bold text-primary mb-4">Modifier l'Avis</h2>

      {{ form_start(form) }}

      <div class="row">
        <div class="col-md-6 mb-3">
          {{ form_label(form.dateAvis, "Date de l'avis") }}
          {{ form_widget(form.dateAvis, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(form.dateAvis) }}
        </div>
        <div class="col-md-6 mb-3">
          {{ form_label(form.user, 'Utilisateur') }}
          {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(form.user) }}
        </div>
      </div>

      <div class="mb-3">
        {{ form_label(form.typeAvis, "Type d'avis") }}
        {{ form_widget(form.typeAvis, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.typeAvis) }}
      </div>

      <div class="mb-3">
        {{ form_label(form.note, "Note") }}
        {{ form_widget(form.note, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.note) }}
      </div>

      <div class="mb-3">
        {{ form_label(form.commentaire, "Commentaire") }}
        {{ form_widget(form.commentaire, {'attr': {'class': 'form-control', 'rows': 4}}) }}
        {{ form_errors(form.commentaire) }}
      </div>

      <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('avis_index') }}" class="btn btn-outline-secondary">
          <i class="bi bi-arrow-left"></i> Retour
        </a>
        <button type="submit" class="btn btn-primary">
          <i class="bi bi-check-circle"></i> Modifier
        </button>
      </div>

      {{ form_end(form) }}

      <div class="text-center mt-3">
        <!-- Formulaire de suppression d'avis -->
        {{ include('avis/_delete_form.html.twig', { avis: avis }) }}
      </div>
    </div>
  </div>
{% endblock %}
