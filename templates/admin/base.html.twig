<!DOCTYPE html>
<html lang="fr">
  <!--begin::Head-->
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>{% block title %}FreelanceConnect{% endblock %}</title>
    <!--begin::Primary Meta Tags-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="title" content="FreelanceConnect | Administration" />
    <meta name="author" content="FreelanceConnect" />
    <!--end::Primary Meta Tags-->
    <!--begin::Fonts-->
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <!--end::Fonts-->
    <!--begin::Vendor Stylesheets-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css"
    />
    <link 
      rel="stylesheet" 
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" 
    />
    <link 
      rel="stylesheet" 
      href="https://cdn.jsdelivr.net/npm/perfect-scrollbar@1.5.5/css/perfect-scrollbar.css" 
    />
    <!--end::Vendor Stylesheets-->
    <!--begin::Global Stylesheets-->
    <style>
      /* Variables globales */
      :root {
        --primary-color: #4f86f7;
        --primary-light: #6e9fff;
        --primary-dark: #3a75e0;
        --secondary-color: #5f8bbf;
        --success-color: #28a745;
        --info-color: #17a2b8;
        --warning-color: #ffc107;
        --danger-color: #dc3545;
        --dark-color: #343a40;
        --dark-bg: rgba(67, 90, 111, 0.95);
        --light-text: #ffffff;
        --gray-100: #f8f9fa;
        --gray-200: #e9ecef;
        --gray-300: #dee2e6;
        --gray-400: #ced4da;
        --gray-500: #adb5bd;
        --gray-600: #6c757d;
        --gray-700: #495057;
        --gray-800: #343a40;
        --gray-900: #212529;
        --font-family: 'Poppins', sans-serif;
        --shadow-sm: 0 .125rem .25rem rgba(0, 0, 0, .075);
        --shadow: 0 .5rem 1rem rgba(0, 0, 0, .15);
        --shadow-lg: 0 1rem 3rem rgba(0, 0, 0, .175);
        --transition: all 0.3s ease;
        --border-radius: 0.5rem;
        --border-radius-sm: 0.25rem;
        --border-radius-lg: 1rem;
      }
      
      /* Reset et base */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: var(--font-family);
        background-color: var(--gray-100);
        color: var(--gray-800);
        overflow-x: hidden;
        min-height: 100vh;
      }
      
      /* Layout principal */
      .app-container {
        display: flex;
        min-height: 100vh;
      }
      
      /* Sidebar */
      .app-sidebar {
        width: 280px;
        background: linear-gradient(135deg, var(--dark-bg), var(--primary-dark));
        color: var(--light-text);
        position: fixed;
        left: 0;
        top: 0;
        bottom: 0;
        z-index: 1000;
        box-shadow: var(--shadow);
        transition: var(--transition);
        overflow: hidden;
      }
      
      .app-sidebar.collapsed {
        width: 70px;
      }
      
      .sidebar-brand {
        padding: 1.5rem 1rem;
        display: flex;
        align-items: center;
        height: 70px;
        background-color: rgba(0, 0, 0, 0.1);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      }
      
      .sidebar-brand .brand-link {
        color: var(--light-text);
        text-decoration: none;
        font-weight: 600;
        font-size: 1.25rem;
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
        width: 100%;
      }
      
      .sidebar-brand .brand-icon {
        font-size: 1.5rem;
        margin-right: 0.75rem;
      }
      
      .sidebar-menu {
        padding: 1rem 0;
        overflow-y: auto;
        height: calc(100% - 70px);
      }
      
      .sidebar-menu::-webkit-scrollbar {
        width: 5px;
      }
      
      .sidebar-menu::-webkit-scrollbar-track {
        background: rgba(255, 255, 255, 0.05);
      }
      
      .sidebar-menu::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.2);
        border-radius: 10px;
      }
      
      .sidebar-heading {
        padding: 0.75rem 1.5rem;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: rgba(255, 255, 255, 0.6);
        font-weight: 600;
      }
      
      .nav-item {
        margin: 0.25rem 0.75rem;
      }
      
      .nav-link {
        display: flex;
        align-items: center;
        padding: 0.75rem 1rem;
        color: rgba(255, 255, 255, 0.8);
        border-radius: var(--border-radius);
        text-decoration: none;
        transition: var(--transition);
      }
      
      .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: var(--light-text);
      }
      
      .nav-link.active {
        background-color: var(--primary-color);
        color: var(--light-text);
        box-shadow: 0 4px 20px 0 rgba(0, 0, 0, 0.14), 0 7px 10px -5px rgba(79, 134, 247, 0.4);
      }
      
      .nav-link i {
        font-size: 1.25rem;
        margin-right: 0.75rem;
        width: 1.5rem;
        text-align: center;
      }
      
      .nav-link .badge {
        margin-left: auto;
      }
      
      /* Header */
      .app-header {
        height: 70px;
        background-color: var(--light-text);
        box-shadow: var(--shadow-sm);
        display: flex;
        align-items: center;
        padding: 0 1.5rem;
        position: fixed;
        top: 0;
        right: 0;
        left: 280px;
        z-index: 999;
        transition: var(--transition);
      }
      
      .app-header.sidebar-collapsed {
        left: 70px;
      }
      
      .header-toggler {
        background: none;
        border: none;
        color: var(--gray-600);
        font-size: 1.5rem;
        cursor: pointer;
        padding: 0.25rem;
        margin-right: 1rem;
        transition: var(--transition);
      }
      
      .header-toggler:hover {
        color: var(--primary-color);
      }
      
      .header-search {
        flex: 1;
        max-width: 400px;
        margin-right: auto;
      }
      
      .search-form {
        position: relative;
      }
      
      .search-input {
        padding: 0.5rem 1rem 0.5rem 2.5rem;
        border-radius: 50px;
        border: 1px solid var(--gray-300);
        background-color: var(--gray-100);
        width: 100%;
        transition: var(--transition);
      }
      
      .search-input:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(79, 134, 247, 0.25);
      }
      
      .search-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--gray-500);
      }
      
      .header-actions {
        display: flex;
        align-items: center;
      }
      
      .header-action-item {
        margin-left: 1rem;
        position: relative;
      }
      
      .action-btn {
        background: none;
        border: none;
        color: var(--gray-600);
        font-size: 1.25rem;
        cursor: pointer;
        padding: 0.5rem;
        border-radius: 50%;
        transition: var(--transition);
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
      }
      
      .action-btn:hover {
        background-color: var(--gray-200);
        color: var(--primary-color);
      }
      
      .action-btn .badge {
        position: absolute;
        top: 0;
        right: 0;
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
        border-radius: 50%;
        background-color: var(--danger-color);
        color: var(--light-text);
      }
      
      .user-dropdown {
        display: flex;
        align-items: center;
        cursor: pointer;
        padding: 0.5rem;
        border-radius: var(--border-radius);
        transition: var(--transition);
      }
      
      .user-dropdown:hover {
        background-color: var(--gray-200);
      }
      
      .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: var(--primary-color);
        color: var(--light-text);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        margin-right: 0.75rem;
      }
      
      .user-info {
        display: flex;
        flex-direction: column;
      }
      
      .user-name {
        font-weight: 600;
        font-size: 0.875rem;
        color: var(--gray-800);
      }
      
      .user-role {
        font-size: 0.75rem;
        color: var(--gray-600);
      }
      
      /* Main content */
      .app-main {
        flex: 1;
        margin-left: 280px;
        padding-top: 70px;
        transition: var(--transition);
      }
      
      .app-main.sidebar-collapsed {
        margin-left: 70px;
      }
      
      .app-content-header {
        padding: 1.5rem;
        background-color: var(--light-text);
        border-bottom: 1px solid var(--gray-200);
      }
      
      .content-header-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--gray-800);
        margin-bottom: 0.5rem;
      }
      
      .breadcrumb {
        font-size: 0.875rem;
      }
      
      .app-content {
        padding: 1.5rem;
      }
      
      /* Cards */
      .card {
        background-color: var(--light-text);
        border: none;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow-sm);
        transition: var(--transition);
        margin-bottom: 1.5rem;
      }
      
      .card:hover {
        box-shadow: var(--shadow);
      }
      
      .card-header {
        background-color: transparent;
        border-bottom: 1px solid var(--gray-200);
        padding: 1.25rem 1.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }
      
      .card-title {
        font-weight: 600;
        margin-bottom: 0;
        color: var(--gray-800);
      }
      
      .card-body {
        padding: 1.5rem;
      }
      
      /* Tables */
      .table {
        margin-bottom: 0;
      }
      
      .table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
        color: var(--gray-700);
        border-top: none;
      }
      
      .table td {
        vertical-align: middle;
      }
      
      /* Buttons */
      .btn {
        font-weight: 500;
        padding: 0.5rem 1.25rem;
        border-radius: var(--border-radius);
        transition: var(--transition);
      }
      
      .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
      }
      
      .btn-primary:hover {
        background-color: var(--primary-dark);
        border-color: var(--primary-dark);
      }
      
      .btn-sm {
        padding: 0.25rem 0.75rem;
        font-size: 0.875rem;
      }
      
      /* Utilities */
      .shadow-hover:hover {
        box-shadow: var(--shadow) !important;
      }
      
      .bg-gradient-primary {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark)) !important;
      }
      
      .text-gradient {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }
      
      /* Responsive */
      @media (max-width: 992px) {
        .app-sidebar {
          left: -280px;
        }
        
        .app-sidebar.mobile-show {
          left: 0;
        }
        
        .app-header, .app-main {
          left: 0;
          margin-left: 0;
        }
        
        .overlay {
          position: fixed;
          top: 0;
          left: 0;
          right: 0;
          bottom: 0;
          background-color: rgba(0, 0, 0, 0.5);
          z-index: 999;
          display: none;
        }
        
        .overlay.show {
          display: block;
        }
      }
    </style>
    <!--end::Global Stylesheets-->
    <!--begin::Page Stylesheets-->
    {% block stylesheets %}{% endblock %}
    <!--end::Page Stylesheets-->
  </head>
  <!--end::Head-->
  <!--begin::Body-->
  <body>
    <!--begin::App Container-->
    <div class="app-container">
      <!--begin::Overlay (for mobile)-->
      <div class="overlay" id="sidebar-overlay"></div>
      <!--end::Overlay-->
      
      <!--begin::Sidebar-->
      <aside class="app-sidebar" id="sidebar">
        <!--begin::Sidebar Brand-->
        <div class="sidebar-brand">
          <a href="{{ path('admin_formation_index') }}" class="brand-link">
            <i class="bi bi-briefcase-fill brand-icon"></i>
            <span class="brand-text">FreelanceConnect</span>
          </a>
        </div>
        <!--end::Sidebar Brand-->
        
        <!--begin::Sidebar Menu-->
        <div class="sidebar-menu">
          <div class="sidebar-heading">Principal</div>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a href="{{ path('admin_dashboard') }}" class="nav-link {% if app.request.get('_route') == 'admin_dashboard' %}active{% endif %}">
                <i class="bi bi-speedometer2"></i>
                <span>Tableau de bord</span>
              </a>
            </li>
            <li class="nav-item">
              <a href="{{ path('admin_formation_index') }}" class="nav-link {% if app.request.get('_route') == 'admin_formation_index' %}active{% endif %}">
                <i class="bi bi-journal-text"></i>
                <span>Formations</span>
              </a>
            </li>
            <li class="nav-item">
              <a href="{{ path('admin_inscription_index') }}" class="nav-link {% if app.request.get('_route') starts with 'admin_inscription' %}active{% endif %}">
                <i class="bi bi-calendar-check"></i>
                <span>Inscriptions</span>
                <span class="badge bg-primary rounded-pill">Nouveau</span>
              </a>
            </li>
          </ul>
          
          <div class="sidebar-heading">Gestion</div>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a href="{{ path('admin_formation_new') }}" class="nav-link {% if app.request.get('_route') == 'admin_formation_new' %}active{% endif %}">
                <i class="bi bi-plus-circle"></i>
                <span>Ajouter formation</span>
              </a>
            </li>
            <li class="nav-item">
              <a href="#" class="nav-link">
                <i class="bi bi-people"></i>
                <span>Utilisateurs</span>
                <span class="badge bg-primary rounded-pill">Bientôt</span>
              </a>
            </li>
            <li class="nav-item">
              <a href="#" class="nav-link">
                <i class="bi bi-gear"></i>
                <span>Paramètres</span>
              </a>
            </li>
          </ul>
        </div>
        <!--end::Sidebar Menu-->
      </aside>
      <!--end::Sidebar-->
      
      <!--begin::Header-->
      <header class="app-header" id="header">
        <div class="header-brand">
          <a href="{{ path('admin_formation_index') }}" class="brand-link">
            <!-- Header vide -->
          </a>
        </div>
      </header>
      <!--end::Header-->
      
      <!--begin::Main Content-->
      <main class="app-main" id="main">
        <!--begin::Content Header-->
        <div class="app-content-header">
          <h1 class="content-header-title">{% block page_title %}Tableau de bord{% endblock %}</h1>
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="{{ path('admin_formation_index') }}">Accueil</a></li>
              <li class="breadcrumb-item active" aria-current="page">{% block breadcrumb %}Tableau de bord{% endblock %}</li>
            </ol>
          </nav>
        </div>
        <!--end::Content Header-->
        
        <!--begin::Content-->
        <div class="app-content">
          {% block content %}{% endblock %}
        </div>
        <!--end::Content-->
      </main>
      <!--end::Main Content-->
    </div>
    <!--end::App Container-->
    
    <!--begin::Vendor Scripts-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/perfect-scrollbar@1.5.5/dist/perfect-scrollbar.min.js"></script>
    <!--end::Vendor Scripts-->
    
    <!--begin::Global Scripts-->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Initialisation de Perfect Scrollbar pour la sidebar
        const sidebarMenu = document.querySelector('.sidebar-menu');
        if (sidebarMenu) {
          new PerfectScrollbar(sidebarMenu);
        }
        
        // Toggle sidebar
        const sidebarToggler = document.getElementById('sidebar-toggler');
        const sidebar = document.getElementById('sidebar');
        const header = document.getElementById('header');
        const main = document.getElementById('main');
        const overlay = document.getElementById('sidebar-overlay');
        
        if (sidebarToggler && sidebar && header && main && overlay) {
          sidebarToggler.addEventListener('click', function() {
            const isMobile = window.innerWidth < 992;
            
            if (isMobile) {
              sidebar.classList.toggle('mobile-show');
              overlay.classList.toggle('show');
            } else {
              sidebar.classList.toggle('collapsed');
              header.classList.toggle('sidebar-collapsed');
              main.classList.toggle('sidebar-collapsed');
            }
          });
          
          overlay.addEventListener('click', function() {
            sidebar.classList.remove('mobile-show');
            overlay.classList.remove('show');
          });
        }
        
        // Tooltips
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function(tooltipTriggerEl) {
          return new bootstrap.Tooltip(tooltipTriggerEl);
        });
      });
    </script>
    <!--end::Global Scripts-->
    
    <!--begin::Page Scripts-->
    {% block javascripts %}{% endblock %}
    <!--end::Page Scripts-->
  </body>
  <!--end::Body-->
</html>
