{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="form-group mb-3">
                {{ form_label(form.userId, 'Utilisateur', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.userId, {'attr': {'class': 'form-control' ~ (form.userId.vars.errors|length > 0 ? ' is-invalid' : ''), 'placeholder': 'Sélectionnez un utilisateur'}}) }}
                {% if form.userId.vars.errors|length > 0 %}
                    <div class="error-message">
                        {{ form_errors(form.userId) }}
                    </div>
                {% endif %}
                <div class="form-text">Sélectionnez l'utilisateur qui s'inscrit à la formation.</div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group mb-3">
                {{ form_label(form.formationId, 'Formation', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.formationId, {'attr': {'class': 'form-control' ~ (form.formationId.vars.errors|length > 0 ? ' is-invalid' : ''), 'placeholder': 'Sélectionnez une formation'}}) }}
                {% if form.formationId.vars.errors|length > 0 %}
                    <div class="error-message">
                        {{ form_errors(form.formationId) }}
                    </div>
                {% endif %}
                <div class="form-text">Sélectionnez la formation concernée par cette inscription.</div>
            </div>
        </div>
    </div>
    
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="form-group mb-3">
                {{ form_label(form.dateInscription, 'Date d\'inscription', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.dateInscription, {'attr': {'class': 'form-control' ~ (form.dateInscription.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                {% if form.dateInscription.vars.errors|length > 0 %}
                    <div class="error-message">
                        {{ form_errors(form.dateInscription) }}
                    </div>
                {% endif %}
                <div class="form-text">Date à laquelle l'inscription a été effectuée.</div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label class="form-label">Statut</label>
                <select class="form-select" disabled>
                    <option selected>Confirmée</option>
                    <option>En attente</option>
                    <option>Annulée</option>
                </select>
                <div class="form-text">Le statut actuel de l'inscription.</div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
            <div class="form-group mb-3">
                <label class="form-label">Notes</label>
                <textarea class="form-control" rows="3" placeholder="Ajoutez des notes ou commentaires concernant cette inscription (optionnel)"></textarea>
                <div class="form-text">Informations supplémentaires concernant cette inscription.</div>
            </div>
        </div>
    </div>
    
    <div class="d-flex justify-content-end mt-4">
        <a href="{{ path('admin_inscription_index') }}" class="btn btn-outline-secondary me-2">
            <i class="bi bi-x-circle me-1"></i>Annuler
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle me-1"></i>{{ button_label|default('Enregistrer') }}
        </button>
    </div>
{{ form_end(form) }}

<style>
    .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
        color: #495057;
    }
    
    .form-control, .form-select {
        padding: 0.75rem 1rem;
        border: 1px solid #ced4da;
        border-radius: 0.375rem;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #4f86f7;
        box-shadow: 0 0 0 0.25rem rgba(79, 134, 247, 0.25);
    }
    
    .form-text {
        font-size: 0.8rem;
        margin-top: 0.25rem;
        color: #6c757d;
    }
    
    .error-message {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        font-weight: 500;
    }
    
    .error-message ul {
        list-style: none;
        padding-left: 0;
        margin-bottom: 0;
    }
    
    .error-message li {
        padding: 0.25rem 0;
    }
    
    .error-message li::before {
        content: "• ";
        color: #dc3545;
    }
    
    .is-invalid {
        border-color: #dc3545 !important;
    }
    
    .is-invalid:focus {
        box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25) !important;
    }
    
    .btn-primary {
        background-color: #4f86f7;
        border-color: #4f86f7;
    }
    
    .btn-primary:hover {
        background-color: #3a75e6;
        border-color: #3a75e6;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    
    .btn-outline-secondary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>
