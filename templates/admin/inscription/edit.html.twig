{% extends 'admin/base.html.twig' %}

{% block title %}Modifier l'inscription - FreelanceConnect{% endblock %}

{% block page_title %}Modifier l'inscription{% endblock %}
{% block breadcrumb %}Modification{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .card {
        border: none;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
    }
    
    .card-header {
        background-color: transparent;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        padding: 1.5rem;
    }
    
    .card-header h5 {
        font-weight: 600;
        color: var(--gray-800);
        margin: 0;
    }
    
    .card-body {
        padding: 2rem;
    }
    
    .card-footer {
        background-color: transparent;
        border-top: 1px solid rgba(0, 0, 0, 0.05);
        padding: 1.5rem;
    }
    
    .form-section-title {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid var(--gray-200);
        color: var(--gray-700);
    }
    
    .action-buttons .btn {
        margin-left: 0.5rem;
    }
    
    .btn-delete {
        color: #dc3545;
        border-color: #dc3545;
        background-color: transparent;
    }
    
    .btn-delete:hover {
        background-color: #dc3545;
        color: white;
    }
    
    .modal-danger .modal-header {
        background-color: #dc3545;
        color: white;
    }
    
    .modal-danger .btn-close {
        filter: invert(1) grayscale(100%) brightness(200%);
    }
    
    .modal-body-icon {
        font-size: 3rem;
        color: #dc3545;
        margin-bottom: 1rem;
    }
</style>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">
                            <i class="bi bi-pencil-square me-2 text-warning"></i>
                            Modifier l'inscription
                        </h5>
                        <p class="text-muted mb-0">{{ inscription.dateInscription|date('d/m/Y') }}</p>
                    </div>
                    <div class="action-buttons">
                        <a href="{{ path('admin_inscription_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Retour à la liste
                        </a>
                        <a href="{{ path('admin_inscription_show', {'id': inscription.id}) }}" class="btn btn-outline-info">
                            <i class="bi bi-eye me-1"></i> Voir les détails
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-section-title">
                        <i class="bi bi-info-circle me-2"></i>Informations de l'inscription
                    </div>
                    {{ include('admin/inscription/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <div>
                        <span class="text-muted"><i class="bi bi-clock-history me-1"></i>Dernière modification: {{ "now"|date("d/m/Y H:i") }}</span>
                    </div>
                    <button type="button" class="btn btn-delete" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash me-1"></i> Supprimer cette inscription
                    </button>
                </div>
            </div>
            
            <!-- Modal de confirmation de suppression -->
            <div class="modal fade modal-danger" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                Confirmer la suppression
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body text-center">
                            <div class="modal-body-icon">
                                <i class="bi bi-trash-fill"></i>
                            </div>
                            <h5 class="mb-3">Êtes-vous sûr de vouloir supprimer cette inscription ?</h5>
                            <p class="text-muted mb-4">Cette action est irréversible et supprimera définitivement toutes les données associées à cette inscription.</p>
                            
                            <div class="alert alert-warning">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <i class="bi bi-info-circle-fill fs-4"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3 text-start">
                                        <h6 class="alert-heading mb-1">Détails de l'inscription</h6>
                                        <p class="mb-0">
                                            <strong>Formation:</strong> {{ inscription.formationId }}<br>
                                            <strong>Utilisateur:</strong> {{ inscription.userId }}<br>
                                            <strong>Date:</strong> {{ inscription.dateInscription|date('d/m/Y') }}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                <i class="bi bi-x-circle me-1"></i>Annuler
                            </button>
                            <form method="post" action="{{ path('admin_inscription_delete', {'id': inscription.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ inscription.id) }}">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash me-1"></i>Supprimer définitivement
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
