{% extends 'admin/base.html.twig' %}

{% block title %}Nouvelle inscription - FreelanceConnect{% endblock %}

{% block page_title %}Nouvelle inscription{% endblock %}
{% block breadcrumb %}Création{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .card {
        border: none;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
    }
    
    .card-header {
        background-color: transparent;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        padding: 1.5rem;
    }
    
    .card-header h5 {
        font-weight: 600;
        color: var(--gray-800);
        margin: 0;
    }
    
    .card-body {
        padding: 2rem;
    }
    
    .form-section-title {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid var(--gray-200);
        color: var(--gray-700);
    }
    
    .form-label {
        font-weight: 500;
        color: var(--gray-700);
    }
    
    .form-text {
        font-size: 0.8rem;
    }
    
    .btn-primary {
        background-color: rgba(21, 34, 43, 0.95);
        border-color: rgba(21, 34, 43, 0.95);
    }
    
    .btn-primary:hover {
        background-color: rgba(21, 34, 43, 1);
        border-color: rgba(21, 34, 43, 1);
    }
</style>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">
                            <i class="bi bi-plus-circle me-2 text-primary"></i>
                            Créer une nouvelle inscription
                        </h5>
                        <p class="text-muted mb-0">Remplissez le formulaire ci-dessous pour créer une nouvelle inscription</p>
                    </div>
                    <div>
                        <a href="{{ path('admin_inscription_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Retour à la liste
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-section-title">
                        <i class="bi bi-info-circle me-2"></i>Informations de l'inscription
                    </div>
                    {{ include('admin/inscription/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
