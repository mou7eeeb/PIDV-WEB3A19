{% extends 'admin/base.html.twig' %}

{% block title %}Nouvelle formation - FreelanceConnect{% endblock %}

{% block page_title %}Créer une formation{% endblock %}
{% block breadcrumb %}Nouvelle formation{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    /* Card Styles */
    .card {
        border: none;
        border-radius: 0.75rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        overflow: hidden;
    }
    
    .card:hover {
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }
    
    .card-header {
        background-color: #fff;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        padding: 1.5rem 2rem;
    }
    
    .card-header h5 {
        font-weight: 700;
        color: #344767;
        margin: 0;
        font-size: 1.25rem;
    }
    
    .card-body {
        padding: 2rem;
        background-color: #fff;
    }
    
    /* Form Section Styles */
    .form-section-title {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        padding-bottom: 0.75rem;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        color: #344767;
        display: flex;
        align-items: center;
    }
    
    .form-section-title i {
        margin-right: 0.75rem;
        color: #4361ee;
        font-size: 1.25rem;
    }
    
    /* Header Icon */
    .header-icon {
        width: 42px;
        height: 42px;
        border-radius: 10px;
        background: linear-gradient(135deg, #4361ee, #3a56d4);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.25rem;
        margin-right: 1rem;
    }
    
    /* Animation */
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    .animate-fade-in {
        animation: fadeIn 0.5s ease forwards;
    }
</style>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-10 mx-auto animate-fade-in">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <div class="header-icon">
                            <i class="bi bi-plus-lg"></i>
                        </div>
                        <div>
                            <h5 class="card-title">Nouvelle formation</h5>
                            <p class="text-muted mb-0">Créez une nouvelle formation en remplissant le formulaire ci-dessous</p>
                        </div>
                    </div>
                    <a href="{{ path('admin_formation_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Retour à la liste
                    </a>
                </div>
                <div class="card-body">
                    <div class="form-section-title">
                        <i class="bi bi-info-circle"></i>Informations générales
                    </div>
                    
                    <div class="alert alert-light border-0 mb-4">
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <i class="bi bi-lightbulb text-warning fs-4"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="alert-heading mb-1">Conseils pour créer une formation</h6>
                                <p class="mb-0">
                                    Donnez un nom clair et descriptif à votre formation. Ajoutez une description détaillée pour aider les participants à comprendre le contenu et les objectifs. Tous les champs marqués d'un astérisque (*) sont obligatoires.
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    {{ include('admin/formation/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    // Animation des éléments au chargement de la page
    document.addEventListener('DOMContentLoaded', function() {
        // Focus sur le premier champ du formulaire
        setTimeout(function() {
            const firstInput = document.querySelector('.form-control');
            if (firstInput) {
                firstInput.focus();
            }
        }, 500);
    });
</script>
{% endblock %}
