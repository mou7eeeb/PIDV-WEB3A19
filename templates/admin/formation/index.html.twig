        background-color: rgba(23, 162, 184, 0.15);
        color: #17a2b8;
    }
    
    .animate-pulse {
        animation: pulse 2s infinite;
    }
    
    @keyframes pulse {
        0% {
            opacity: 1;
        }
        50% {
            opacity: 0.5;
        }
        100% {
            opacity: 1;
        }
    }
    
    /* Search Results Highlight */
    mark {
        background-color: rgba(255, 193, 7, 0.3);
        padding: 0.1rem 0.2rem;
        border-radius: 0.25rem;
    }
    
    /* Search Form */
    .search-form {
        position: relative;
        max-width: 300px;
        min-width: 250px;
    }
    
    .search-form .form-control {
        padding-left: 40px;
        border-radius: 50px;
