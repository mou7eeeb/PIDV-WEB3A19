{% block content %}
    <!-- Formations Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center flex-wrap">
            <h6 class="m-0 font-weight-bold">Liste des formations</h6>
            <div class="d-flex gap-3 mt-2 mt-md-0">
                <form id="searchForm" class="search-form" action="{{ path('admin_formation_index') }}" method="get">
                    <div class="position-relative">
                        <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                        <input type="text" id="searchInput" name="q" class="form-control" placeholder="Rechercher par nom, ID ou description..." value="{{ searchTerm is defined ? searchTerm : '' }}" autocomplete="off">
                        <div id="searchSpinner" class="position-absolute top-50 end-0 translate-middle-y me-3 d-none">
                            <div class="spinner-border spinner-border-sm text-primary" role="status">
                                <span class="visually-hidden">Chargement...</span>
                            </div>
                        </div>
                    </div>
                </form>
                <a href="{{ path('admin_formation_export_all_pdf') }}" class="btn btn-modern btn-modern-info me-2">
                    <i class="bi bi-file-pdf"></i>Exporter PDF
                </a>
                <a href="{{ path('admin_formation_new') }}" class="btn btn-modern btn-modern-primary">
                    <i class="bi bi-plus-circle"></i>Nouvelle formation
                </a>
            </div>
        </div>
        <div class="card-body">
            <div id="searchResults">
                {% if formations|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover" id="formationsTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Publication ID</th>
                                    <th>Nom formation</th>
                                    <th>Description</th>
                                    <th>Dur√©e</th>
                                    <th>Places</th>
                                    <th>Prix</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for formation in formations %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-primary me-2">
                                                {% if searchTerm is defined and searchTerm %}
                                                    {{ formation.getPublicationId()|replace({(searchTerm): '<span class="highlight">' ~ searchTerm ~ '</span>'})|raw }}
                                                {% else %}
                                                    {{ formation.getPublicationId() }}
                                                {% endif %}
                                            </span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="fw-bold">
                                            {% if searchTerm is defined and searchTerm %}
                                                {{ formation.nom|replace({(searchTerm): '<span class="highlight">' ~ searchTerm ~ '</span>'})|raw }}
                                            {% else %}
                                                {{ formation.nom }}
                                            {% endif %}
                                        </span>
                                    </td>
                                    <td>
                                        {% if formation.description %}
                                            {% if searchTerm is defined and searchTerm %}
                                                {{ formation.description|slice(0, 50)|replace({(searchTerm): '<span class="highlight">' ~ searchTerm ~ '</span>'})|raw }}{% if formation.description|length > 50 %}...{% endif %}
                                            {% else %}
                                                {{ formation.description|slice(0, 50) }}{% if formation.description|length > 50 %}...{% endif %}
                                            {% endif %}
                                        {% else %}
                                            <em class="text-muted">Aucune description</em>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge badge-soft-info rounded-pill">{{ formation.duree }}h</span>
                                    </td>
                                    <td>
                                        {% if formation.nombrePlaces > 10 %}
                                            <span class="badge badge-soft-success rounded-pill">{{ formation.nombrePlaces }} places</span>
                                        {% elseif formation.nombrePlaces > 0 %}
                                            <span class="badge badge-soft-warning rounded-pill">{{ formation.nombrePlaces }} places</span>
                                        {% else %}
                                            <span class="badge badge-soft-danger rounded-pill">Complet</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="fw-bold">{{ formation.prix|number_format(2, ',', ' ') }} ‚Ç¨</div>
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-center table-actions">
                                            <a href="{{ path('admin_formation_show', {'id': formation.id}) }}" class="btn btn-modern-action btn-outline-info" title="Voir les d√©tails">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="{{ path('admin_formation_edit', {'id': formation.id}) }}" class="btn btn-modern-action btn-outline-warning" title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a href="{{ path('admin_formation_export_single_pdf', {'id': formation.id}) }}" class="btn btn-modern-action btn-outline-primary" title="Exporter PDF">
                                                <i class="bi bi-file-pdf"></i>
                                            </a>
                                            <button type="button" class="btn btn-modern-action btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ formation.id }}" title="Supprimer">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-5">
                        <div class="avatar-lg mx-auto mb-4">
                            <div class="avatar-title bg-light text-primary rounded-circle">
                                <i class="bi bi-journal-plus fs-1"></i>
                            </div>
                        </div>
                        <h5>Aucune formation trouv√©e</h5>
                        <p class="text-muted">
                            Commencez par cr√©er votre premi√®re formation pour voir les donn√©es ici.
                        </p>
                        <a href="{{ path('admin_formation_new') }}" class="btn btn-modern btn-modern-primary mt-3">
                            <i class="bi bi-plus-circle me-2"></i>Cr√©er une nouvelle formation
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="https://cdn.jsdelivr.net/npm/datatables.net@1.13.1/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/datatables.net-bs5@1.13.1/js/dataTables.bootstrap5.min.js"></script>
<script>
    $(document).ready(function() {
        // Initialisation de DataTable
        $('#formationsTable').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.1/i18n/fr-FR.json'
            },
            pageLength: 10,
            lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Tous"]],
            responsive: true,
            order: [[1, 'asc']], // Trier par nom de formation
            columnDefs: [
                { targets: [3, 4, 5], orderable: false } // D√©sactiver le tri pour certaines colonnes
            ],
            // D√©sactiver la recherche int√©gr√©e car nous utilisons notre propre recherche
            searching: false
        });
        
        // Recherche en temps r√©el avec soumission automatique
        let searchTimer;
        const searchDelay = 300; // ms
        
        $('#searchInput').on('input', function() {
            clearTimeout(searchTimer);
            
            // Afficher le spinner
            $('#searchSpinner').removeClass('d-none');
            
            searchTimer = setTimeout(function() {
                $('#searchForm').submit();
            }, searchDelay);
        });
        
        // Focus sur le champ de recherche au chargement
        $('#searchInput').focus();
    });
</script>
{% endblock %}
