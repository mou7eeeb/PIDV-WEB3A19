{% extends 'admin/base.html.twig' %}

{% block title %}Détails de la formation - FreelanceConnect{% endblock %}

{% block page_title %}Détails de la formation{% endblock %}
{% block breadcrumb %}Détails{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    /* Card Styles */
    .card {
        border: none;
        border-radius: 0.75rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        overflow: hidden;
    }
    
    .card:hover {
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }
    
    .card-header {
        background-color: #fff;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        padding: 1.5rem 2rem;
    }
    
    .card-header h5 {
        font-weight: 700;
        color: #344767;
        margin: 0;
        font-size: 1.25rem;
    }
    
    .card-body {
        padding: 2rem;
        background-color: #fff;
    }
    
    .card-footer {
        background-color: #f8f9fa;
        border-top: 1px solid rgba(0, 0, 0, 0.05);
        padding: 1.25rem 2rem;
    }
    
    .action-buttons .btn {
        margin-left: 0.5rem;
    }
    
    /* Header Icon */
    .header-icon {
        width: 42px;
        height: 42px;
        border-radius: 10px;
        background: linear-gradient(135deg, #3a56d4, #4cc9f0);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.25rem;
        margin-right: 1rem;
    }
    
    /* Delete Button */
    .btn-delete {
        color: #dc3545;
        border-color: #dc3545;
        background-color: transparent;
        border-radius: 0.5rem;
        padding: 0.625rem 1.25rem;
        font-weight: 500;
        transition: all 0.2s ease;
    }
    
    .btn-delete:hover {
        background-color: #dc3545;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(220, 53, 69, 0.15);
    }
    
    /* Detail Cards */
    .detail-card {
        border-radius: 0.75rem;
        overflow: hidden;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.03);
        margin-bottom: 1.5rem;
        border: 1px solid rgba(0, 0, 0, 0.03);
        transition: all 0.3s ease;
    }
    
    .detail-card:hover {
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        transform: translateY(-2px);
    }
    
    .detail-card:last-child {
        margin-bottom: 0;
    }
    
    .detail-header {
        background: linear-gradient(135deg, #4361ee, #3a56d4);
        color: white;
        padding: 1rem 1.5rem;
        font-weight: 600;
        display: flex;
        align-items: center;
    }
    
    .detail-header i {
        margin-right: 0.75rem;
        font-size: 1.25rem;
    }
    
    .detail-content {
        padding: 1.5rem;
        background-color: white;
    }
    
    .detail-row {
        margin-bottom: 1.5rem;
    }
    
    .detail-row:last-child {
        margin-bottom: 0;
    }
    
    .detail-label {
        font-weight: 600;
        color: #344767;
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
    }
    
    .detail-value {
        font-size: 1rem;
        padding: 0.75rem 1rem;
        background-color: #f8f9fa;
        border-radius: 0.5rem;
        border: 1px solid rgba(0, 0, 0, 0.03);
    }
    
    /* Badges */
    .detail-badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 500;
        font-size: 0.875rem;
    }
    
    .badge-primary {
        background-color: rgba(67, 97, 238, 0.15);
        color: #4361ee;
    }
    
    .badge-success {
        background-color: rgba(16, 185, 129, 0.15);
        color: #10b981;
    }
    
    .badge-info {
        background-color: rgba(76, 201, 240, 0.15);
        color: #4cc9f0;
    }
    
    .badge-warning {
        background-color: rgba(245, 158, 11, 0.15);
        color: #f59e0b;
    }
    
    .badge-danger {
        background-color: rgba(239, 68, 68, 0.15);
        color: #ef4444;
    }
    
    /* Modal Styles */
    .modal-danger .modal-header {
        background-color: #dc3545;
        color: white;
        border-bottom: none;
        border-top-left-radius: 0.5rem;
        border-top-right-radius: 0.5rem;
    }
    
    .modal-danger .btn-close {
        filter: invert(1) grayscale(100%) brightness(200%);
    }
    
    .modal-body-icon {
        font-size: 3.5rem;
        color: #dc3545;
        margin-bottom: 1.5rem;
        opacity: 0.8;
    }
    
    .modal-content {
        border: none;
        border-radius: 0.75rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }
    
    /* Animation */
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    .animate-fade-in {
        animation: fadeIn 0.5s ease forwards;
    }
    
    /* Last modified badge */
    .last-modified {
        display: inline-flex;
        align-items: center;
        padding: 0.5rem 0.75rem;
        background-color: rgba(0, 0, 0, 0.03);
        border-radius: 0.5rem;
        font-size: 0.875rem;
    }
    
    .last-modified i {
        color: #6c757d;
        margin-right: 0.5rem;
    }
</style>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-10 mx-auto animate-fade-in">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <div class="header-icon">
                            <i class="bi bi-journal-text"></i>
                        </div>
                        <div>
                            <h5 class="card-title">Détails de la formation</h5>
                            <p class="text-muted mb-0">
                                {% if formation.nom is defined and formation.nom %}
                                    {{ formation.nom }} <span class="text-secondary">({{ formation.publicationId }})</span>
                                {% else %}
                                    {{ formation.publicationId }}
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    <div class="action-buttons">
                        <a href="{{ path('admin_formation_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Retour à la liste
                        </a>
                        <a href="{{ path('admin_formation_edit', {'id': formation.id}) }}" class="btn btn-outline-warning">
                            <i class="bi bi-pencil me-1"></i> Modifier
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    {% if formation.description is defined and formation.description %}
                    <div class="alert alert-light border-0 mb-4">
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <i class="bi bi-quote fs-4 text-primary"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="alert-heading mb-1">Description</h6>
                                <p class="mb-0">{{ formation.description }}</p>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                    
                    <div class="detail-card">
                        <div class="detail-header">
                            <i class="bi bi-info-circle"></i>Informations générales
                        </div>
                        <div class="detail-content">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="detail-row">
                                        <div class="detail-label">Publication ID</div>
                                        <div class="detail-value">
                                            <span class="detail-badge badge-primary">{{ formation.publicationId }}</span>
                                        </div>
                                    </div>
                                </div>
                                {% if formation.nom is defined %}
                                <div class="col-md-6">
                                    <div class="detail-row">
                                        <div class="detail-label">Nom de la formation</div>
                                        <div class="detail-value">
                                            {{ formation.nom|default('Non spécifié') }}
                                        </div>
                                    </div>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    
                    <div class="detail-card">
                        <div class="detail-header">
                            <i class="bi bi-calendar-event"></i>Détails de la formation
                        </div>
                        <div class="detail-content">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="detail-row">
                                        <div class="detail-label">Durée</div>
                                        <div class="detail-value">
                                            <span class="detail-badge badge-info">{{ formation.duree }} heures</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="detail-row">
                                        <div class="detail-label">Nombre de places</div>
                                        <div class="detail-value">
                                            {% if formation.nombrePlaces > 10 %}
                                                <span class="detail-badge badge-success">{{ formation.nombrePlaces }} places</span>
                                            {% elseif formation.nombrePlaces > 5 %}
                                                <span class="detail-badge badge-warning">{{ formation.nombrePlaces }} places</span>
                                            {% else %}
                                                <span class="detail-badge badge-danger">{{ formation.nombrePlaces }} places</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="detail-card">
                        <div class="detail-header">
                            <i class="bi bi-currency-euro"></i>Informations tarifaires
                        </div>
                        <div class="detail-content">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="detail-row">
                                        <div class="detail-label">Prix</div>
                                        <div class="detail-value">
                                            <span class="fw-bold fs-5">{{ formation.prix|number_format(2, ',', ' ') }} €</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="detail-row">
                                        <div class="detail-label">Prix par heure</div>
                                        <div class="detail-value">
                                            <span class="text-muted">{{ (formation.prix / formation.duree)|number_format(2, ',', ' ') }} € / heure</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <div class="last-modified">
                        <i class="bi bi-clock-history"></i>
                        <span>Dernière consultation: {{ "now"|date("d/m/Y H:i") }}</span>
                    </div>
                    <button type="button" class="btn btn-delete" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash me-1"></i> Supprimer cette formation
                    </button>
                </div>
            </div>
            
            <!-- Modal de confirmation de suppression -->
            <div class="modal fade modal-danger" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                Confirmer la suppression
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body text-center py-4">
                            <div class="modal-body-icon">
                                <i class="bi bi-trash-fill"></i>
                            </div>
                            <h5 class="mb-3">Êtes-vous sûr de vouloir supprimer cette formation ?</h5>
                            <p class="text-muted mb-4">Cette action est irréversible et supprimera définitivement toutes les données associées à cette formation.</p>
                            
                            <div class="alert alert-info border-0">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <i class="bi bi-info-circle-fill fs-4"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3 text-start">
                                        <h6 class="alert-heading mb-1">Détails de la formation</h6>
                                        <p class="mb-0">
                                            {% if formation.nom is defined and formation.nom %}<strong>Nom:</strong> {{ formation.nom }}<br>{% endif %}
                                            <strong>Publication ID:</strong> {{ formation.publicationId }}<br>
                                            {% if formation.description is defined and formation.description %}<strong>Description:</strong> {{ formation.description|length > 100 ? formation.description|slice(0, 100) ~ '...' : formation.description }}<br>{% endif %}
                                            <strong>Prix:</strong> {{ formation.prix|number_format(2, ',', ' ') }} €<br>
                                            <strong>Places:</strong> {{ formation.nombrePlaces }}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                <i class="bi bi-x-circle me-1"></i>Annuler
                            </button>
                            <form method="post" action="{{ path('admin_formation_delete', {'id': formation.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ formation.id) }}">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash me-1"></i>Supprimer définitivement
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    // Animation des éléments au chargement de la page
    document.addEventListener('DOMContentLoaded', function() {
        // Effet de survol sur les cartes de détails
        const detailCards = document.querySelectorAll('.detail-card');
        detailCards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px)';
                this.style.boxShadow = '0 8px 20px rgba(0, 0, 0, 0.08)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
                this.style.boxShadow = '0 3px 10px rgba(0, 0, 0, 0.03)';
            });
        });
    });
</script>
{% endblock %}
