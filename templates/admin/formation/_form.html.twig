{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="row g-4">
        <div class="col-md-6">
            <div class="form-group mb-3">
                {{ form_label(form.publication_id, 'Publication ID', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.publication_id, {'attr': {'class': 'form-control' ~ (form.publication_id.vars.errors|length > 0 ? ' is-invalid' : ''), 'placeholder': 'Identifiant unique de la formation'}}) }}
                {% if form.publication_id.vars.errors|length > 0 %}
                    <div class="error-message">
                        {{ form_errors(form.publication_id) }}
                    </div>
                {% endif %}
                <div class="form-text">Identifiant unique utilisé pour référencer cette formation</div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group mb-3">
                {{ form_label(form.nom, 'Nom de la formation', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control' ~ (form.nom.vars.errors|length > 0 ? ' is-invalid' : ''), 'placeholder': 'Nom complet de la formation'}}) }}
                {% if form.nom.vars.errors|length > 0 %}
                    <div class="error-message">
                        {{ form_errors(form.nom) }}
                    </div>
                {% endif %}
                <div class="form-text">Nom complet et descriptif de la formation</div>
            </div>
        </div>
        <div class="col-12">
            <div class="form-group mb-3">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control' ~ (form.description.vars.errors|length > 0 ? ' is-invalid' : ''), 'placeholder': 'Description détaillée de la formation', 'rows': 4}}) }}
                {% if form.description.vars.errors|length > 0 %}
                    <div class="error-message">
                        {{ form_errors(form.description) }}
                    </div>
                {% endif %}
                <div class="form-text">Description détaillée du contenu et des objectifs de la formation</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group mb-3">
                {{ form_label(form.duree, 'Durée', {'label_attr': {'class': 'form-label'}}) }}
                <div class="input-group">
                    {{ form_widget(form.duree, {'attr': {'class': 'form-control' ~ (form.duree.vars.errors|length > 0 ? ' is-invalid' : ''), 'placeholder': 'Durée en heures'}}) }}
                    <span class="input-group-text">heures</span>
                </div>
                {% if form.duree.vars.errors|length > 0 %}
                    <div class="error-message">
                        {{ form_errors(form.duree) }}
                    </div>
                {% endif %}
                <div class="form-text">Durée totale de la formation</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group mb-3">
                {{ form_label(form.nombre_places, 'Nombre de places', {'label_attr': {'class': 'form-label'}}) }}
                <div class="input-group">
                    {{ form_widget(form.nombre_places, {'attr': {'class': 'form-control' ~ (form.nombre_places.vars.errors|length > 0 ? ' is-invalid' : ''), 'placeholder': 'Nombre de participants'}}) }}
                    <span class="input-group-text">places</span>
                </div>
                {% if form.nombre_places.vars.errors|length > 0 %}
                    <div class="error-message">
                        {{ form_errors(form.nombre_places) }}
                    </div>
                {% endif %}
                <div class="form-text">Capacité maximale d'accueil</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group mb-3">
                {{ form_label(form.prix, 'Prix', {'label_attr': {'class': 'form-label'}}) }}
                <div class="input-group">
                    {{ form_widget(form.prix, {'attr': {'class': 'form-control' ~ (form.prix.vars.errors|length > 0 ? ' is-invalid' : ''), 'placeholder': 'Prix de la formation'}}) }}
                    <span class="input-group-text">€</span>
                </div>
                {% if form.prix.vars.errors|length > 0 %}
                    <div class="error-message">
                        {{ form_errors(form.prix) }}
                    </div>
                {% endif %}
                <div class="form-text">Tarif par participant</div>
            </div>
        </div>
    </div>
    
    <div class="d-flex justify-content-end mt-4">
        <a href="{{ path('admin_formation_index') }}" class="btn btn-outline-secondary me-2">
            <i class="bi bi-x-circle me-1"></i>Annuler
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle me-1"></i>{{ button_label|default('Enregistrer') }}
        </button>
    </div>
{{ form_end(form) }}

