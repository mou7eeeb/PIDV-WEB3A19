{% extends 'base.html.twig' %}

{% block title %}Détail inscription{% endblock %}

{% block body %}
    <h1>Détail de l'inscription</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ inscription.id }}</td>
            </tr>
            <tr>
                <th>User ID</th>
                <td>{{ inscription.userId }}</td>
            </tr>
            <tr>
                <th>Formation ID</th>
                <td>{{ inscription.formationId }}</td>
            </tr>
            <tr>
                <th>Date d'inscription</th>
                <td>{{ inscription.dateInscription ? inscription.dateInscription|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_yes_index') }}">Retour à la liste</a>
    <a href="{{ path('app_yes_edit', {'id': inscription.id}) }}">Modifier</a>

    {{ include('yes/_delete_form.html.twig', {'inscription': inscription}) }}
{% endblock %}
