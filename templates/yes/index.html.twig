{% extends 'base.html.twig' %}

{% block title %}Inscriptions Index{% endblock %}

{% block body %}
    <h1>Liste des inscriptions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>User ID</th>
                <th>Formation ID</th>
                <th>Date d'inscription</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for inscription in inscriptions %}
            <tr>
                <td>{{ inscription.id }}</td>
                <td>{{ inscription.userId }}</td>
                <td>{{ inscription.formationId }}</td>
                <td>{{ inscription.dateInscription ? inscription.dateInscription|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_yes_show', {'id': inscription.id}) }}">Afficher</a>
                    <a href="{{ path('app_yes_edit', {'id': inscription.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune inscription trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_yes_new') }}">Créer une nouvelle inscription</a>
{% endblock %}
