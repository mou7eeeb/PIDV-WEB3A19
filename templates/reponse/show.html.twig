{% extends 'base.html.twig' %}

{% block title %}Détails de la Réponse{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="card shadow rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h2 class="mb-0"><i class="bi bi-chat-left-dots"></i> Détails de la Réponse</h2>
        </div>
        <div class="card-body">
            <table class="table table-hover align-middle">
                <tbody>
                    <tr>
                        <th scope="row" class="w-25">🆔 ID</th>
                        <td>{{ reponse.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">📨 Réclamation</th>
                        <td>{{ reponse.reclamationId }}</td>
                    </tr>
                    <tr>
                        <th scope="row">👤 Utilisateur</th>
                        <td>{{ reponse.userId }}</td>
                    </tr>
                    <tr>
                        <th scope="row">💬 Contenu</th>
                        <td>{{ reponse.contenu }}</td>
                    </tr>
                    <tr>
                        <th scope="row">🗓️ Date de création</th>
                        <td>{{ reponse.dateCreation ? reponse.dateCreation|date('d/m/Y H:i') : 'Non défini' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a href="{{ path('app_reponse_index') }}" class="btn btn-outline-secondary">
                ⬅ Retour à la liste
            </a>
            <div>
                <a href="{{ path('app_reponse_edit', {'id': reponse.id}) }}" class="btn btn-outline-warning me-2">
                    ✏️ Modifier
                </a>
                {{ include('reponse/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
