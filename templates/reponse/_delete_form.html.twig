<form method="post" action="{{ path('app_reponse_delete', {'id': reponse.id}) }}">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reponse.id) }}">

    <button class="btn btn-danger" onclick="return confirmDeletion()">Delete</button>
</form>

<div id="confirmation-message" style="display:none; color: red;">
    <p>Êtes-vous sûr de vouloir supprimer cette réponse ?</p>
    <form method="post" action="{{ path('app_reponse_delete', {'id': reponse.id}) }}">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reponse.id) }}">
        <button class="btn btn-danger">Confirmer la suppression</button>
        <button type="button" class="btn btn-secondary" onclick="cancelDeletion()">Annuler</button>
    </form>
</div>

<script>
    function confirmDeletion() {
        event.preventDefault();
        document.getElementById('confirmation-message').style.display = 'block';
    }

    function cancelDeletion() {
        document.getElementById('confirmation-message').style.display = 'none';
    }
</script>
