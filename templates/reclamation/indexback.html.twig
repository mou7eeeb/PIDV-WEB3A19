{% extends 'baseback.html.twig' %}

{% block title %}Liste des Réclamations{% endblock %}

{% block body %}
    <h1>Liste des Réclamations</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Date</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.id }}</td>
                <td>{{ reclamation.titre }}</td>
                <td>{{ reclamation.description }}</td>
                <td>{{ reclamation.date ? reclamation.date|date('d/m/Y H:i') : 'N/A' }}</td>
                <td>{{ reclamation.status }}</td>
                <td>
                    <a href="{{ path('app_reclamation_back_edit', {'id': reclamation.id}) }}" class="btn btn-primary btn-sm">Gérer</a>
                    <a href="{{ path('app_reponse_new', {'reclamationId': reclamation.id}) }}" class="btn btn-success btn-sm">Répondre</a>
                    <a href="{{ path('app_reclamation_show_reponses', {'id': reclamation.id}) }}" class="btn btn-info btn-sm">Voir les Réponses</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune réclamation trouvée.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
