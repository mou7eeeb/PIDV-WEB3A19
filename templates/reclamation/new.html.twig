    {{ form_start(form, {'attr': {'autocomplete': 'off'}}) }}

    {% for field in form %}
        {% if field.vars.name != 'status' %}
            <div class="mb-3">
                {{ form_label(field) }}
                {{ form_widget(field, {
                    'attr': {'class': 'form-control' ~ (field.vars.errors|length > 0 ? ' is-invalid' : '')}
