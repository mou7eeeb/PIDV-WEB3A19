{{ form_start(form, {'attr': {'autocomplete': 'off', 'novalidate': 'novalidate'}}) }}

<style>
    .is-invalid {
        border: 2px solid red !important;
        background-color: #ffe6e6 !important;
    }

    .invalid-feedback {
        color: red;
        font-size: 0.9em;
        margin-top: 4px;
    }
</style>

{% for field in form %}
    {% if field.vars.name != 'status' %}
        <div class="mb-3">
            {{ form_label(field) }}
            {{ form_widget(field, {
                'attr': {
                    'class': 'form-control' ~ (field.vars.errors|length > 0 ? ' is-invalid' : '')
                }
            }) }}
            {% if field.vars.errors|length > 0 %}
                <div class="invalid-feedback" style="display: block;">
                    {{ form_errors(field) }}
                </div>
            {% endif %}
        </div>
    {% endif %}
{% endfor %}

<div class="mb-3">
    {{ form_label(form.status) }}
    {{ form_widget(form.status, {
        'attr': {
            'class': 'form-select' ~ (form.status.vars.errors|length > 0 ? ' is-invalid' : '')
        }
    }) }}
    {% if form.status.vars.errors|length > 0 %}
        <div class="invalid-feedback" style="display: block;">
            {{ form_errors(form.status) }}
        </div>
    {% endif %}
</div>

<button class="btn btn-success">
    {{ button_label|default('ðŸ’¾ Enregistrer') }}
</button>

{{ form_end(form) }}
