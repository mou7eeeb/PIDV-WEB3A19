{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const userTypeButtons = document.querySelectorAll('.user-type-btn');
            const userTypeInput = document.querySelector('input[name="registration_form[type_utilisateur]"]');
            const passwordInput = document.querySelector('input[name="registration_form[plainPassword]"]');
            const alertError = document.createElement('div');
            alertError.className = 'alert-error';
            form.insertBefore(alertError, form.firstChild);

            // Validation du mot de passe
            function validatePassword(value) {
                const regex = /^(?=.*[A-Z])(?=.*[0-9]).{8,}$/;
                return regex.test(value);
            }

            // Validation d'un champ
            function validateField(input) {
                const container = input.closest('.form-floating');
                let isValid = true;
                let errorMessage = '';

                if (input === passwordInput) {
                    if (!input.value.trim() || !validatePassword(input.value)) {
                        isValid = false;
                        errorMessage = 'Le mot de passe doit contenir au moins 8 caractères, commencer par une majuscule et inclure au moins un chiffre';
                    }
                } else if (!input.value.trim()) {
                    isValid = false;
                    errorMessage = 'Ce champ est obligatoire';
                }

                if (!isValid) {
                    container.classList.add('has-error');
                    let error = container.querySelector('.error-message');
                    if (!error) {
                        error = document.createElement('div');
                        error.className = 'error-message';
                        container.appendChild(error);
                    }
                    error.textContent = errorMessage;
                } else {
                    container.classList.remove('has-error');
                    const error = container.querySelector('.error-message');
                    if (error) error.remove();
                }

                return isValid;
            }

            // Validation du type d'utilisateur
            function validateUserType() {
                return userTypeInput.value !== '';
            }

            // Gestion des boutons de type d'utilisateur
            userTypeButtons.forEach(button => {
                button.addEventListener('click', function() {
                    userTypeButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    userTypeInput.value = this.getAttribute('data-type');
                });
            });

            // Validation en temps réel des champs
            form.querySelectorAll('input[type="text"], input[type="email"], input[type="tel"], input[type="password"]').forEach(input => {
                input.addEventListener('blur', () => validateField(input));
                input.addEventListener('input', () => {
                    if (input.closest('.form-floating').classList.contains('has-error')) {
                        validateField(input);
                    }
                });
            });

            // Validation à la soumission du formulaire
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                let isValid = true;
                const errors = [];

                // Valider tous les champs
                form.querySelectorAll('input[type="text"], input[type="email"], input[type="tel"], input[type="password"]').forEach(input => {
                    if (!validateField(input)) {
                        isValid = false;
                        errors.push(`Le champ ${input.labels[0].textContent.trim()} est invalide`);
                    }
                });

                // Valider le type d'utilisateur
                if (!validateUserType()) {
                    isValid = false;
                    errors.push('Veuillez sélectionner un type d\'utilisateur');
                }

                // Valider les conditions d'utilisation
                const agreeTerms = form.querySelector('input[name="registration_form[agreeTerms]"]');
                if (!agreeTerms.checked) {
                    isValid = false;
                    errors.push('Vous devez accepter les conditions d\'utilisation');
                    agreeTerms.closest('.form-check').classList.add('has-error');
                } else {
                    agreeTerms.closest('.form-check').classList.remove('has-error');
                }

                if (!isValid) {
                    alertError.style.display = 'block';
                    alertError.innerHTML = '<strong>Erreur :</strong><br>' + errors.join('<br>');
                } else {
                    alertError.style.display = 'none';
                    form.submit();
                }
            });
        });
    </script>
{% endblock %}
