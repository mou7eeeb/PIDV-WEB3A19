{% extends 'base.html.twig' %}

{% block title %}Liste des formations{% endblock %}

{% block body %}
    <h1>Formations</h1>

    <a href="{{ path('app_formation_new') }}">Créer une nouvelle formation</a>

    <table border="1" cellpadding="5" cellspacing="0">
        <thead>
            <tr>
                <th>ID</th>
                <th>Publication ID</th>
                <th>Durée</th>
                <th>Nombre de places</th>
                <th>Prix (€)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for formation in formations %}
                <tr>
                    <td>{{ formation.id }}</td>
                    <td>{{ formation.publicationId }}</td>
                    <td>{{ formation.duree }}</td>
                    <td>{{ formation.nombrePlaces }}</td>
                    <td>{{ formation.prix }}</td>
                    <td>
                        <a href="{{ path('app_formation_show', {'id': formation.id}) }}">Voir</a>
                        <a href="{{ path('app_formation_edit', {'id': formation.id}) }}">Modifier</a>
                        <form method="post"
                              action="{{ path('app_formation_delete' , {'id': formation.id}) }}"
                              style="display:inline-block;"
                              onsubmit="return confirm('Supprimer cette formation ?');">
                            <input type="hidden" name="_token"
                                   value="{{ csrf_token('delete' ~ formation.id) }}">
                            <button type="submit">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucune formation trouvée.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
