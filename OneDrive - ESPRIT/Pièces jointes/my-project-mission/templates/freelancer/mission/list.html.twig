{% extends 'base.html.twig' %}

{% block title %}Missions disponibles{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Missions disponibles</h1>

    <div class="row">
        {% for mission in missions %}
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">{{ mission.titre }}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{ mission.nomEntreprise }}</h6>
                    <p class="card-text">{{ mission.description|u.truncate(100, '...') }}</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-primary">{{ mission.budget }} €</span>
                        <a href="{{ path('freelancer_mission_show', {'id': mission.id}) }}" class="btn btn-sm btn-outline-primary">
                            Voir détails
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-12">
            <div class="alert alert-info">Aucune mission disponible actuellement</div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}