{% extends 'base.html.twig' %}

{% block title %}Mes missions{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Mes missions</h1>
        <a href="{{ path('employeur_mission_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvelle mission
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Entreprise</th>
                    <th>Budget</th>
                    <th>Date</th>
                    <th>Candidatures</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for mission in missions %}
                <tr>
                    <td>{{ mission.titre }}</td>
                    <td>{{ mission.nomEntreprise }}</td>
                    <td>{{ mission.budget }} â‚¬</td>
                    <td>{{ mission.datePub|date('d/m/Y') }}</td>
                    <td>
                        <span class="badge bg-{{ mission.candidatures|length > 0 ? 'success' : 'secondary' }}">
                            {{ mission.candidatures|length }}
                        </span>
                    </td>
                    <td>
                        <div class="btn-group">
                            <a href="{{ path('employeur_mission_candidatures', {'id': mission.id}) }}" 
                               class="btn btn-sm btn-info" title="Voir candidatures">
                                <i class="fas fa-users"></i>
                            </a>
                            <a href="{{ path('employeur_mission_edit', {'id': mission.id}) }}" 
                               class="btn btn-sm btn-warning" title="Modifier">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="{{ path('employeur_mission_delete', {'id': mission.id}) }}" 
                               class="btn btn-sm btn-danger" title="Supprimer"
                               onclick="return confirm('Confirmer la suppression ?')">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}